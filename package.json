{
    "name": "nest-studio",
    "version": "0.1.0",
    "description": "Visual builder for Next.js + Tailwind + shadcn/ui projects",
    "main": "dist/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
        "dev:renderer": "vite",
        "dev:main": "tsc -p tsconfig.main.json && esbuild src/main/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --external:electron --external:fsevents --external:chokidar --watch",
        "build": "npm run build:renderer && npm run build:main && npm run fix-css",
        "fix-css": "npx tailwindcss -i src/renderer/index.css -o test-output.css && cp test-output.css dist/assets/*.css",
        "build:renderer": "vite build",
        "build:main": "tsc -p tsconfig.main.json && esbuild src/main/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --external:electron --external:fsevents --external:chokidar",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:pack": "electron-builder",
        "electron:dist": "npm run build && electron-builder",
        "test": "vitest",
        "test:e2e": "playwright test",
        "test:requirements": "vitest run --reporter=verbose",
        "test:performance": "playwright test --grep='Performance'",
        "test:accessibility": "playwright test --grep='Accessibility'",
        "validate-requirements": "npm run test:requirements && npm run test:e2e && npm run test:performance && npm run test:accessibility",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "nextjs",
        "tailwind",
        "shadcn",
        "visual-builder",
        "electron",
        "react"
    ],
    "author": "Nest Studio Team",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@tailwindcss/vite": "^4.1.13",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.6.4",
        "esbuild": "^0.25.9",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.20",
        "jsdom": "^27.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "vitest": "^1.0.4"
    },
    "dependencies": {
        "@babel/core": "^7.28.4",
        "@babel/generator": "^7.28.3",
        "@babel/parser": "^7.28.4",
        "@babel/traverse": "^7.28.4",
        "@babel/types": "^7.28.4",
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-alert-dialog": "^1.0.5",
        "@radix-ui/react-avatar": "^1.0.4",
        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-collapsible": "^1.0.3",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-hover-card": "^1.0.7",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-menubar": "^1.0.4",
        "@radix-ui/react-navigation-menu": "^1.1.4",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-progress": "^1.0.3",
        "@radix-ui/react-radio-group": "^1.1.3",
        "@radix-ui/react-scroll-area": "^1.0.5",
        "@radix-ui/react-select": "^2.0.0",
        "@radix-ui/react-separator": "^1.0.3",
        "@radix-ui/react-slider": "^1.1.2",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.0.3",
        "@radix-ui/react-tabs": "^1.0.4",
        "@radix-ui/react-toast": "^1.1.5",
        "@radix-ui/react-toggle": "^1.0.3",
        "@radix-ui/react-toggle-group": "^1.0.4",
        "@radix-ui/react-tooltip": "^1.0.7",
        "@tanstack/react-query": "^5.14.2",
        "chokidar": "^3.5.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "commander": "^11.1.0",
        "framer-motion": "^10.16.16",
        "inquirer": "^9.2.12",
        "lucide-react": "^0.294.0",
        "monaco-editor": "^0.45.0",
        "react": "^18.2.0",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.48.2",
        "recast": "^0.23.11",
        "tailwind-merge": "^2.2.0",
        "tailwindcss-animate": "^1.0.7",
        "ts-morph": "^22.0.0",
        "ws": "^8.14.2",
        "zod": "^3.22.4"
    },
    "build": {
        "appId": "com.neststudio.app",
        "productName": "Nest Studio",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}